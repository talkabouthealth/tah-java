<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">
    
    
    
  <listener>
    <listener-class>servletcontext.DBCPoolingContext</listener-class>
  </listener>
  <listener>
    <listener-class>
    	servletcontext.StartTalkmi
    </listener-class>
  </listener>
  <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/TalkmiDB</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>
   <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
   <servlet>
   	<servlet-name>SignUp</servlet-name>
   	<servlet-class>servlets.SignUpServlet</servlet-class>
   </servlet>
   <servlet-mapping>
   	<servlet-name>SignUp</servlet-name>
   	<url-pattern>/SignUp</url-pattern>
   </servlet-mapping>
	<servlet>
   	<servlet-name>NewTopic</servlet-name>
   	<servlet-class>servlets.NewTopicServlet</servlet-class>
   </servlet>
   <servlet-mapping>
   	<servlet-name>NewTopic</servlet-name>
   	<url-pattern>/NewTopic</url-pattern>
   </servlet-mapping>
	
   <servlet>
   	<servlet-name>Logout</servlet-name>
   	<servlet-class>servlets.LogoutServlet</servlet-class>
   </servlet>
   <servlet-mapping>
   	<servlet-name>Logout</servlet-name>
   	<url-pattern>/Logout</url-pattern>
   </servlet-mapping>
   <servlet>
   	<servlet-name>RunTalkmi</servlet-name>
   	<servlet-class>servlets.RunTalkmiServlet</servlet-class>
   </servlet>
   <servlet-mapping>
   	<servlet-name>RunTalkmi</servlet-name>
   	<url-pattern>/RunTalkmi</url-pattern>
   </servlet-mapping>
      <servlet>
   	<servlet-name>UpdateProfile</servlet-name>
   	<servlet-class>servlets.UpdateProfileServlet</servlet-class>
   </servlet>
   <servlet-mapping>
   	<servlet-name>UpdateProfile</servlet-name>
   	<url-pattern>/UpdateProfile</url-pattern>
   </servlet-mapping>
   <servlet>
   	<servlet-name>MoreNewTopicsServlet</servlet-name>
   	<servlet-class>servlets.MoreNewTopicsServlet</servlet-class>
   </servlet>
   <servlet-mapping>
   	<servlet-name>MoreNewTopicsServlet</servlet-name>
   	<url-pattern>/MoreNewTopicsServlet</url-pattern>
   </servlet-mapping>
   <servlet>
   	<servlet-name>MoreOldTopicsServlet</servlet-name>
   	<servlet-class>servlets.MoreOldTopicsServlet</servlet-class>
   </servlet>
   <servlet>
   	<description>
   	</description>
   	<display-name>tmp</display-name>
   	<servlet-name>tmp</servlet-name>
   	<servlet-class>
   	tmp</servlet-class>
   </servlet>
   <servlet-mapping>
   	<servlet-name>MoreOldTopicsServlet</servlet-name>
   	<url-pattern>/MoreOldTopicsServlet</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
   	<servlet-name>tmp</servlet-name>
   	<url-pattern>/tmp</url-pattern>
   </servlet-mapping>
</web-app>